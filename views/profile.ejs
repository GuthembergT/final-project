<!doctype html>
<html>
<head>
    <title>Capoeira School Tracker</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="style.css">
</head>
<body>
  <% if (admin) { %>
    <header>
      <nav>
        <li><a href="/:id">Profile</a></li>
        <li><a href="/members">Members</a></li>
        <li><a href="/memberships">Memberships</a></li>
        <li><a href="/locations">Locations</a></li>
        <li><a href="/classes">Classes</a></li>
        <li><a href="/calendar">Calendar</a></li>
      </nav>
    </header>
  <% } %>
  <body id="profileBg">
    <div class="profile container">
    
        <div class="header text-center">
            <h1><span class="fa fa-bomb"></span> Main Page</h1>
            <a href="/logout" class="btn btn-default btn-lg">Logout</a>
        </div>
    
        <div class="row">
    
            <div class="col-sm-12">
              <button id="edit">EDIT</button>
              <form id="editForm" class="hide">
                <label for="first">First Name</label>
                <input type="text" id="first">
                <label for="last">Last Name</label>
                <input type="text" id="last">
                <label for="nickname">Nickname</label>
                <input type="text" id="nickname">
                <% if (admin) { %>
                  <label for="rank">Rank</label>
                  <input type="text" id="rank">
                <% } %>
                <label for="email">Email</label>
                <input type="text" id="email">
                <label for="address">Address</label>
                <input type="text" id="address">
                <label for="telephone">Telephone</label>
                <input type="text" id="telephone">
                <button id="submitChanges">Submit</button>
                <button type="button" class="cancel">Cancel</button>
              </form>
              <h3 class="text-center">APOM</h3>
          </div>
        <div class="col-sm-6 profileInfo">
          <img src="img/<%= info.picture %>">
          <h3>Name: <span class="first"><%= info.first %></span> <span class="last"><%= info.last %></span></h3>
          <h3>Capoeira Name: <span class="nickname"><%= info.nickname %></span></h3>
          <h3>Rank: <span class="rank"><%= info.rank %></span></h3>
          <h3>Email: <span class="email"><%= info.email %></span></h3>
          <h3>Address: <span class="address"><%= info.address %></span></h3>
          <h3>Membership: <%= info.membership %> 
            <% if (info.membership === 'None') { %>
              <button>Purchase Membership</button>
            <% } %>
            </h3>
          <h3>Telephone: <span class="telephone"><%= info.telephone %></span></h3>
          <h3>Signed Up: <%= info.signupDate.slice(0, info.signupDate.indexOf('G')) %></h3>
          <% if (admin && info.userId.toString() != selfId.toString()) { %>
            <h3> Role: <span class="role"><%= role %></span></h3>
            <button id="roleChange">Change Role</button>
            <div class="roleSection hide">
              <input type="text" id="role">
              <button id="newRole">Submit</button>
              <button class="cancel">Cancel</button>
            </div>  
          <% } %>
        </div>
    </div>
    
    <script src="js/profile.js"></script>
    </body>
    </html>